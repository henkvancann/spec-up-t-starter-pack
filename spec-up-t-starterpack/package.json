{
  "name": "spec-up-t-starterpack",
  "version": "1.0.61",
  "license": "Apache-2.0",
  "description": "Quick setup for a specification with the Spec-Up-T tool.",
  "dependencies": {
    "dotenv": "^16.4.5",
    "spec-up-t": "^1.0.8"
  },
  "scripts": {
    "edit": "npm run --silent edit:run",
    "edit:run": "node -e \"require('spec-up-t')()\"",

    "render": "npm run --silent render:run",
    "render:run": "node --no-warnings -e \"require('spec-up-t')({ nowatch: true })\"",

    "dev": "npm run --silent dev:run",
    "dev:run": "node -e \"require('spec-up-t')({ dev: true })\"",

    "xrefs": "npm run --silent xrefs:run",
    "xrefs:run": "GITHUB_API_TOKEN=$(grep GITHUB_API_TOKEN .env | cut -d '=' -f2) node -e \"require('spec-up-t/src/get-xrefs-data.js').getXrefsData(process.env.GITHUB_API_TOKEN)\"",

    "removexref": "npm run --silent removexref:run",
    "removexref:run": "node remove-xref.js",

    "topdf": "npm run --silent topdf:run",
    "topdf:run": "node -e \"require('spec-up-t/src/create-pdf.js')\"",

    "validatespec": "npm run --silent validatespec:run",
    "validatespec:run": "node -e \"require('spec-up-t/src/json-key-validator.js').runJsonKeyValidatorSync()\"",

    "addterms": "npm run --silent addterms:run",
    "addterms:run": "node -e \"require('spec-up-t/src/create-term-index.js').createTermIndex()\"",
    
    "freeze": "npm run --silent freeze:run",
    "freeze:run": "node -e \"require('spec-up-t/src/freeze.js').freeze()\"",
    
    "references": "npm run --silent references:run",
    "references:run": "node -e \"require('spec-up-t/src/references.js')\"",
    
    "publish": "node -e \"require('spec-up-t/src/create-term-index.js').createTermIndex()\" && node -e \"require('spec-up-t/src/create-pdf.js')\" && GITHUB_API_TOKEN=$(grep GITHUB_API_TOKEN .env | cut -d '=' -f2) node -e \"require('spec-up-t/src/get-xrefs-data.js').getXrefsData(process.env.GITHUB_API_TOKEN)\" && node -e \"require('spec-up-t')({ nowatch: true })\"",

    "help": "cat help.txt",
    "menu": "bash ./main.sh",

    "postinstall": "npm run --silent postinstall:final",
    "postinstall:final": "node postinstall-message.js"
  }
}